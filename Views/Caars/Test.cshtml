
@{
    ViewData["Title"] = "Welcome in Catalog CARS";
}
<h1 style=" color:saddlebrown">@ViewData["Title"]</h1>
<div>
    <div class="text">
    <h>@foreach(CarViewModel ar in Model)
        {
            <div>
                <p> Car: @ar.Name</p>
                <p> Model: @ar.Model</p>
               <p> @using (Html.BeginForm("DeleteTest", "Caars", FormMethod.Post))
               {
                   <input type="hidden" name="id" value="@ar.Id" />
                 <button  style="color:brown" type="submit">Delete</button>
               }
               
               @using (Html.BeginForm("Info", "Caars", FormMethod.Get))
               {
                   <input type="hidden" name="id" value="@ar.Id"/>
                 <span>  <button  type="submit">Info</button></span>
               }</p> 
              
               
            </div>
        }
    </h>
    <div>
 
    </div>
    <div>
        <h4 style="color:saddlebrown">ADD CAR</h4>
         @using (Html.BeginForm("GreateTest", "Caars", FormMethod.Post))
               {<label>ID</label>
            <input type="number" name="id"/>
           <label>Car</label>
            <input type="text" name="car"/>
           <label>Model</label>
           <input type="text" name="odel"/>
           <label>Price</label>
            <input type="number" name="price"/>
           <button type="submit">ADD</button>
              }
    </div>
</div>
</div>